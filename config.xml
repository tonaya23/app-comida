<?xml version='1.0' encoding='utf-8'?>
<widget id="com.foodexpress.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FoodExpress</name>
    <description>
        Aplicación de pedidos de comida rápida
    </description>
    <author email="dev@foodexpress.com" href="http://foodexpress.com">
        FoodExpress Team
    </author>
    <content src="index.html" />
    
    <!-- CONFIGURACIÓN MODERNA DE CORDOVA -->
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <!-- CONFIGURACIÓN ANDROID COMPATIBLE -->
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="33" />
        <preference name="android-compileSdkVersion" value="33" />
        
        <!-- PERMISOS -->
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        
        <!-- CONFIGURACIONES ADICIONALES -->
        <preference name="LoadUrlTimeoutValue" value="60000" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash.png" />
        <allow-intent href="market:*" />
    </platform>
    
    <!-- CONFIGURACIONES GLOBALES -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="0xfff8f9fa" />
    <preference name="Orientation" value="portrait" />
</widget>